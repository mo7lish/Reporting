<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView for Report Details -->
    <ScrollView 
        android:id="@+id/reportDetailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#FFDEDE"
        android:paddingTop="84dp"
        android:paddingRight="21dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reportTitleTextView"
                android:textColor="#F46746"
                android:textSize="40sp"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="17dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Report"/>
            <LinearLayout
                android:id="@+id/reportStatusLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/input_field_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="21dp"
                android:orientation="horizontal">
                <EditText
                    android:inputType="text"
                    android:hint="CM0001\nChild Marriage"
                    android:background="@null"
                    android:id="@+id/childMarriageEditText"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="24dp"/>
                <LinearLayout
                    android:id="@+id/statusPendingLayout1"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_background_pending"
                    android:paddingVertical="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/statusPendingTextView1"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pending"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reportStatusLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/input_field_background"
                android:paddingHorizontal="13dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="21dp"
                android:orientation="horizontal">
                <EditText
                    android:inputType="text"
                    android:hint="FM0031\nForced Marriage"
                    android:background="@null"
                    android:id="@+id/forcedMarriageEditText"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="24dp"/>
                <LinearLayout
                    android:id="@+id/statusPendingLayout2"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_background_pending"
                    android:paddingVertical="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/statusPendingTextView2"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pending"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reportStatusLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/input_field_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="271dp"
                android:layout_marginStart="21dp"
                android:orientation="horizontal">
                <EditText
                    android:inputType="text"
                    android:hint="SH0093\nSexual Harassment"
                    android:background="@null"
                    android:id="@+id/sexualHarassmentEditText"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="24dp"/>
                <LinearLayout
                    android:id="@+id/statusCompletedLayout"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_background_completed"
                    android:paddingVertical="7dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/statusCompletedTextView"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Completed"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/appIconImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="299dp"
                android:layout_marginTop="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView for Reports -->
    <RecyclerView
        android:id="@+id/reportsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="16dp"
        tools:listitem="@layout/sample_report_item"
        tools:showIn="@layout/sample_report_item"/>
</LinearLayout>